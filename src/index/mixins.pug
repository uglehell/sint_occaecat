  .nav-button
    .nav-button__container
      .nav-button__disable
        <svg class="nav-button__disable-img" width="49" height="38" viewBox="0 0 49 38" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 0.199158H38L46 5.69916H0V0.199158Z" fill="#fff"/><rect y="16.1992" width="48.5" height="5.5" fill="#fff"/><rect y="32.1992" width="48.5" height="5.5" fill="#fff"/></svg>
