mixin gallery_swiper_slide(index, title, description, link)
  .gallery__swiper-slide.swiper-slide(class="gallery__swiper-slide" + index)
    .gallery__info
      .gallery__info-wrapper
        .gallery__info-title.section__content-title= title
        .gallery__info-text= description
        a.gallery__info-link(href= link, target="_blank", rel="noopener") original
    .gallery__img(class="gallery__img-" + index)

