mixin nav_item(word)
  a.nav__link(href= '#' + word)
    for symbol in word
      span.nav__link-span= symbol

mixin nav
  nav.nav.hidden
    .nav__container
      +nav_item('home')
      +nav_item('risquis')
      +nav_item('gallery')
      +nav_item('nostrud')
      +nav_item('contact')

